<!DOCTYPE html>
<html>
<head>
    <title>Topsy Turvey Cake Design</title>
    <link rel="stylesheet" href="~/site.css" />
</head>
<body>

    <header class="container site-header">
        <div class="row">
            <h1 class="main-logo"><a href="/">Topsy Turvey Cake Design</a></h1>
        </div>
        <div class="row">
            <nav class="navbar">
                <ul class="nav nav-pills">
                    <li><a href="/">About</a></li>
                    <li><a href="/">Blog</a></li>
                    <li><a class="active" href="/">Recipes</a></li>
                    <li><a href="/">Portfolio</a></li>
                    <li><a href="/">Newsletter</a></li>
                    <li><a href="/">Contact</a></li>
                </ul>
                <ul class="nav nav-pills">
                    <li>
                        @if(User.Identity.IsAuthenticated) {
                            <form method="post" asp-page="/Account/Login" asp-page-handler="Logout">
                                <span>@User.Identity.Name</span>
                                <button class="btn btn-link" type="submit">Logout</button>
                            </form>
                        } else {
                            <a asp-page="/Account/Login" asp-route-ReturnUrl="@Context.Request.Path">Login</a>
                        }
                    </li>
                </ul>
            </nav>
        </div>
        <div class="row">
            @if(IsSectionDefined("Title"))
            {
                @RenderSection("Title")
            }
            else
            {
                <h2 class="title">@ViewData["Title"]</h2>
            }
        </div>
    </header>

    <div class="container">

        @RenderBody()

    </div>

    <footer>
        <div class="text-center">
            <span class="text-muted">Last Rendered: @DateTime.Now</span>
        </div>
    </footer>
</body>
</html>
