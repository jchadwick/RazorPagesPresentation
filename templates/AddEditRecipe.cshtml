@page "{id?}"
@model AddEditRecipeModel
@{
    ViewData["Title"] = Model.IsNewRecipe ? "New Recipe" : "Edit Recipe";
}

@section Title { 
    <h2 class="title">@ViewData["Title"]</h2>
}


@if (!ModelState.IsValid)
{
    <div class="col-md-offset-2 col-md-10">
        <h3 class="text-danger">Validation Errors</h3>
        <!--<div asp-validation-summary="All"></div>-->
        <hr />
    </div>
}

<form method="post" class="form-horizontal" enctype="multipart/form-data">
    <div class="form-group">
        <!-- Recipe.Name -->
        <label class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <!-- Recipe.Description -->
        <label class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea rows="3" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group">
        <!-- Recipe.Ingredients -->
        <label class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea rows="5" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group">
        <!-- Recipe.Directions -->
        <label class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea rows="5" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group">
        <!-- Image -->
        <label class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input type="file" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn btn-primary">Save</button>
            @if (!Model.IsNewRecipe)
            {
                <button type="submit" asp-page-handler="Delete" class="btn btn btn-warning">Delete</button>
            }
        </div>
    </div>
</form>